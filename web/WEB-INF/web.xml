<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>Controlador.loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>empleadosController</servlet-name>
        <servlet-class>Controlador.empleadosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuariosController</servlet-name>
        <servlet-class>Controlador.usuariosController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>empleadosController</servlet-name>
        <url-pattern>/empleadosController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuariosController</servlet-name>
        <url-pattern>/usuariosController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
